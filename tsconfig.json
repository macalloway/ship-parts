{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "star-utils-lib": ["../star-utils-lib"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
